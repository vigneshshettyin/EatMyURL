generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model user {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  name       String?
  imageurl   String?
  created_at DateTime?
  links      links[]
}

model links {
  id         Int      @id @default(autoincrement())
  user       user     @relation(fields: [user_id], references: [id])
  user_id    Int
  short_code String   @unique
  long_url   String
  created_at DateTime
  title String?

  @@index(short_code)
}

model ClickAnalytics {
  id        Int      @id @default(autoincrement())
  code      String?
  browser   String?
  os        String?
  device    String?
  country   String?
  region    String?
  city      String?
  timestamp DateTime @default(now()) @db.Date

  @@index([code, timestamp])
  @@index(code)
}
